{
  "name": "product-landing-page",
  "version": "1.0.0",
  "description": "A product landing page as an assignment for responsive web design in freeCodeCamp",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "compress:css": "node-sass css/style.comp.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/picklu/product-landing-page.git"
  },
  "keywords": [
    "product",
    "landing",
    "page"
  ],
  "author": "Subrata Sarker",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/picklu/product-landing-page/issues"
  },
  "homepage": "https://github.com/picklu/product-landing-page#readme",
  "devDependencies": {
    "live-server": "^1.2.1",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5"
  }
}
